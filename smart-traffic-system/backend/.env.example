# Application Settings
APP_NAME=Smart Traffic System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration (SQL Server)
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=SmartTrafficDB
DB_USER=your_username
DB_PASSWORD=your_password
DB_TRUSTED_CONNECTION=yes

# Database Connection String
# DATABASE_URL=mssql+pyodbc://username:password@localhost:1433/SmartTrafficDB?driver=ODBC+Driver+17+for+SQL+Server

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
HERE_MAPS_API_KEY=your_here_maps_api_key
OPENWEATHER_API_KEY=your_openweather_api_key

# ML Model Paths
LSTM_MODEL_PATH=../ml-pipeline/models/saved_models/lstm_traffic_model.h5
XGBOOST_MODEL_PATH=../ml-pipeline/models/saved_models/xgboost_traffic_model.pkl
PROPHET_MODEL_PATH=../ml-pipeline/models/saved_models/prophet_traffic_model.pkl

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=../logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings
CACHE_TTL=300
ENABLE_CACHE=True
